    <!--
        Added the entity Plante.
    -->
    <changeSet id="20190125083038-1" author="jhipster">
        <createTable tableName="plante" remarks="@author Pierre TAQUET">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ph_min" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="ph_max" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="temp_min" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="temp_max" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="classification_cronquist_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="strate_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="vitesse_croissance_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="ensoleillement_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="richesse_sol_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="type_terre_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="type_feuillage_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="type_racine_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="plante_plant_common_name">
            <column name="plant_common_names_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="plantes_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="plantes_id, plant_common_names_id" tableName="plante_plant_common_name"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
